# NextAuth.js - REQUIRED
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-key-here-minimum-32-characters
NEXTAUTH_URL=http://localhost:3000

# Site Configuration - REQUIRED
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# GitHub OAuth for Admin Panel - REQUIRED FOR ADMIN ACCESS
# Create OAuth App: https://github.com/settings/developers
GITHUB_ID=your-github-oauth-app-client-id
GITHUB_SECRET=your-github-oauth-app-client-secret
# Create Personal Access Token: https://github.com/settings/tokens
# Required scopes: repo, read:user
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_REPO=ledlyy/alxtroy.com
GITHUB_BRANCH=main

# Admin Panel - Authorized GitHub Users (comma-separated)
# These GitHub usernames can access the admin panel
ADMIN_GITHUB_USERS=ledlyy,another-username

# Session & Security Settings
SESSION_MAX_AGE=7200
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Audit Logging
ENABLE_AUDIT_LOG=true
AUDIT_LOG_RETENTION_DAYS=90

# Email Configuration (Optional)
# EMAIL_SERVER=smtp://username:password@smtp.example.com:587
# EMAIL_FROM=noreply@alxtroy.com

# Analytics (Optional)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Production URLs (when deploying to Vercel)
# NEXTAUTH_URL=https://alxtroy.com
# NEXT_PUBLIC_SITE_URL=https://alxtroy.com
